<?xml version="1.0" encoding="UTF-8"?>
<LAYER alias="alt_fuentes">
       <TABLENAME>alt_fuentes</TABLENAME>
       <PRIMARYKEY>
	<PKELEMENT>gid</PKELEMENT>
       </PRIMARYKEY>

       <RECORDSET>
       	    <FIELD>
		<FIELDNAME>cod_alternativa</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
	    </FIELD>
       	    <FIELD>
		<FIELDNAME>tipo_fuente_alternativa</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
		<DOMAINREADER>
			<DRTYPE>db</DRTYPE>
			<DRDBSCHEMA>dominios</DRDBSCHEMA>
			<DRDBTABLE>tipo_fuente_alternativa</DRDBTABLE>
			<DRDBCOLUMNALIAS>item</DRDBCOLUMNALIAS>
			<DRDBCOLUMNVALUE>item</DRDBCOLUMNVALUE>
		</DOMAINREADER>
	    </FIELD>
       	    <FIELD>
		<FIELDNAME>existencia_elemento</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
		<DOMAINREADER>
			<DRTYPE>db</DRTYPE>
			<DRDBSCHEMA>dominios</DRDBSCHEMA>
			<DRDBTABLE>existencia_elemento</DRDBTABLE>
			<DRDBCOLUMNALIAS>item</DRDBCOLUMNALIAS>
			<DRDBCOLUMNVALUE>item</DRDBCOLUMNVALUE>
		</DOMAINREADER>
	    </FIELD>
       	    <FIELD>
		<FIELDNAME>aforo</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
	    </FIELD>
       	    <FIELD>
		<FIELDNAME>q_usar</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
	    </FIELD>

	    <FIELD>
		<FIELDNAME>cota</FIELDNAME>
		<VALIDATIONRULE>MANDATORY</VALIDATIONRULE>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
	    </FIELD>
	    
	    <FIELD>
		<FIELDNAME>profundidad_pozo</FIELDNAME>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
		<ENABLEIF>
			<CONDITION>
				<COMPONENT>tipo_fuente_alternativa</COMPONENT>
				<VALUE>Pozo</VALUE>
			</CONDITION>
		</ENABLEIF>
	    </FIELD>
	    
	    <FIELD>
		<FIELDNAME>margen_fondo</FIELDNAME>
		<VALIDATIONRULE>DOUBLE_POSITIVE</VALIDATIONRULE>
		<ENABLEIF>
			<CONDITION>
				<COMPONENT>tipo_fuente_alternativa</COMPONENT>
				<VALUE>Pozo</VALUE>
			</CONDITION>
		</ENABLEIF>
	    </FIELD>
	    
       </RECORDSET>
       
       

</LAYER>
