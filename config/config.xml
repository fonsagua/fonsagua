		</extension>
		
		<extension class-name="es.udc.cartolab.gvsig.fonsagua.FormPointExtension" active="true">
			<tool-bar name="fonsagua">
				<action-tool icon="form-point" tooltip="form-point"
					action-command="" position="60"/>
